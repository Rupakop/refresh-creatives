import { useEffect, useState } from "react";

function App() {
  const [products, setProducts] = useState([]);

  useEffect(() => {
    fetch("https://refresh-creatives-backend.onrender.com/api/products")
      .then((res) => res.json())
      .then((data) => setProducts(data))
      .catch((err) => console.error("Error:", err));
  }, []);

  const handleAddToCart = (product) => {
    alert(`âœ… ${product.name} added to cart!`);
  };

  const handleBuyNow = (product) => {
    alert(`ðŸ›’ Redirecting to checkout for ${product.name}...`);
  };

  return (
    <div style={{ padding: "20px", backgroundColor: "#fce4ec", minHeight: "100vh" }}>
      <h1 style={{ textAlign: "center", fontSize: "2rem", color: "#880e4f" }}>
        Refresh Creatives
      </h1>
      <div style={{ display: "flex", flexWrap: "wrap", justifyContent: "center" }}>
        {products.map((product) => (
          <div
            key={product.id}
            style={{
              backgroundColor: "#fff",
              margin: "15px",
              padding: "10px",
              borderRadius: "10px",
              width: "220px",
              boxShadow: "0 4px 8px rgba(0,0,0,0.2)",
              textAlign: "center",
            }}
          >
            <img
              src={product.image}
              alt={product.name}
              style={{ width: "100%", height: "200px", objectFit: "cover", borderRadius: "10px" }}
            />
            <h2 style={{ fontSize: "1.2rem", margin: "10px 0" }}>{product.name}</h2>
            <p style={{ fontWeight: "bold", color: "#333" }}>â‚¹{product.price}</p>

            <button
              onClick={() => handleAddToCart(product)}
              style={{
                backgroundColor: "#d81b60",
                color: "white",
                border: "none",
                padding: "8px 12px",
                marginTop: "8px",
                borderRadius: "6px",
                cursor: "pointer",
                marginRight: "5px",
              }}
            >
              Add to Cart
            </button>

            <button
              onClick={() => handleBuyNow(product)}
              style={{
                backgroundColor: "#4a148c",
                color: "white",
                border: "none",
                padding: "8px 12px",
                marginTop: "8px",
                borderRadius: "6px",
                cursor: "pointer",
              }}
            >
              Buy Now
            </button>
          </div>
        ))}
      </div>
    </div>
  );
}

export default App;
